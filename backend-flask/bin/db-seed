#!/bin/bash
seed_path="db/seed.sql"
CYAN='\033[1;36m'
NO_COLOR='\033[0m'
LABEL="Loading DB schema"
printf "${CYAN}== ${LABEL}${NO_COLOR}\n"
echo $1
if [ "$1" = "prod" ]; then
    echo "Prod env"
    CON_URL=$PROD_CONNECTION_URL
else
    echo "Dev env"
    CON_URL=$CONNECTION_URL
fi

psql $CON_URL cruddur < $seed_path